<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogFile="c:\temp\console-example-internal.log"
      internalLogLevel="Info" >

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file -->
		<!--<target xsi:type="File" name="logfile" fileName="c:\temp\console-example.log"
                layout="${longdate}|${level}|${logger} |${message} |${all-event-properties} ${exception:format=tostring}" />-->
		<target name="logFile"
				xsi:type="File"
				fileName="${basedir}/${shortdate}.log.txt"
				layout="${longdate} ${callsite} ${level}: ${message}"
		/>
		<target xsi:type="Console" name="logconsole"
                layout="${longdate}|${level}|${logger} |${message} |${all-event-properties} ${exception:format=tostring}" />
		<target name="richTextBox"
				xsi:type="FormControl"
				controlName="txtLog"
				formName="Form2"
				autoScroll="true"
				append= "true"
				useDefaultRowColoringRules="true"
			    layout="${date:format=yyyy-MM-dd HH\:mm\:ss}: (${level:uppercase=true}) ${message:withexception=true}${newline}" >
		</target>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="*" minlevel="Trace" writeTo="logconsole" />
		<logger name="*" levels="Debug,Error" writeTo="logfile" />
		<logger name="*" minlevel="Debug" writeTo="richTextBox" />
	</rules>
</nlog>